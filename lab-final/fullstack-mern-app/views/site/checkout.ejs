<h1>Checkout</h1>

<div style="margin: 20px 0;">
  <h3>Order Summary</h3>
  
  <table border="1" width="100%">
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>

    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td>Rs <%= product.price %></td>
        <td>1</td>
        <td>Rs <%= product.price %></td>
      </tr>
    <% }) %>
  </table>

  <h3 style="text-align: right;">Total Amount: Rs <%= total %></h3>
</div>

<hr>

<div style="max-width: 500px;">
  <h3>Customer Information</h3>
  
  <form method="POST" action="/checkout">
    <div style="margin-bottom: 15px;">
      <label for="customerName">Full Name:</label><br>
      <input 
        type="text" 
        id="customerName"
        name="customerName" 
        required
        placeholder="Enter your full name"
        style="width: 100%; padding: 8px; font-size: 14px;"
      ><br>
    </div>

    <div style="margin-bottom: 15px;">
      <label for="email">Email Address:</label><br>
      <input 
        type="email" 
        id="email"
        name="email" 
        required
        placeholder="Enter your email"
        style="width: 100%; padding: 8px; font-size: 14px;"
      ><br>
    </div>

    <div style="margin-top: 20px;">
      <button type="submit" style="padding: 10px 20px; font-size: 16px; background-color: #28a745; color: white; border: none; cursor: pointer;">
        Place Order
      </button>
      <a href="/cart" style="margin-left: 10px; padding: 10px 20px; font-size: 16px; background-color: #6c757d; color: white; text-decoration: none; display: inline-block;">
        Back to Cart
      </a>
    </div>
  </form>
</div>
